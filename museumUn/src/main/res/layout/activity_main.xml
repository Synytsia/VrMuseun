<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/small"
    android:scaleType="centerCrop"
    tools:context=".MainActivity"
    >
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textShadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="italic"
        android:shadowColor="@color/colorWhite"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:shadowDy="5"
        android:padding="4dp"
        android:background="@drawable/rounded"
        android:textAlignment="center"
        android:textColor="@color/colorShadow"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:gravity="center"
        android:textSize="25dp"
        android:textStyle="italic"
        android:shadowColor="@color/colorWhite"
        android:shadowRadius="20"
        android:shadowDx="5"
        android:shadowDy="5"
        android:padding="5dp"
        android:background="@drawable/rounded"
        android:textAlignment="center"
        android:textColor="@color/colorDark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

<LinearLayout
    android:layout_below="@+id/text"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/vectorstock_new_png1">

    <Button
        android:id="@+id/myAbout"
        android:layout_width="294dp"
        android:layout_height="70dp"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:layout_weight="0.01"
        android:background="@android:color/transparent"
        android:onClick="OnClick"
        android:text="@string/nameButtonAbout"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/instruction"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/myAbout"
        android:layout_below="@+id/myAbout"
        android:layout_gravity="center"
        android:layout_weight="0.01"
        android:background="@android:color/transparent"
        android:onClick="OnClick"
        android:text="@string/nameButtonInstructions"
        android:textAlignment="center"
        android:textStyle="bold" />

    <Button
        android:id="@+id/nextActivity"
        android:layout_width="300dp"
        android:layout_height="66dp"
        android:layout_alignStart="@+id/instruction"
        android:layout_below="@+id/instruction"
        android:layout_gravity="center"
        android:layout_marginTop="11dp"
        android:background="@android:color/transparent"
        android:onClick="OnClick"
        android:text="@string/nameButtonNext"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_weight="0.06" />
</LinearLayout>

</RelativeLayout>
